#include <stdio.h>
int countTriplets(int* arr, int arrSize) 
{
    int count = 0;
    for (int i = 0; i < arrSize; ++i) 
	{
        int xor = 0;
        for (int k = i; k < arrSize; ++k) 
		{
            xor ^= arr[k];
            if (xor == 0 && k > i) 
			{
                count += k - i;
            }
        }
    }
    return count;
}
int main() 
{
    int arr1[] = {2, 3, 1, 6, 7};
    printf("%d\n", countTriplets(arr1, 5)); 
    int arr2[] = {1, 1, 1, 1, 1};
    printf("%d\n", countTriplets(arr2, 5)); 
    return 0;
}
